<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Page</title>
    <link rel="stylesheet" href="/css/profile.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
    // Configure Tailwind
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Orbitron', 'sans-serif'], // Set Orbitron as default sans-serif
          }
        }
      }
    }
  </script>
  </head>
  <body class="min-h-screen text-gray-200">
    <!-- Navigation Bar -->
    <nav class="blurred-nav shadow-lg sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <a href="/profile" class="text-xl font-bold text-white hover:text-blue-300 transition duration-200">Postify</a>
          </div>
          <div class="flex items-center space-x-4">
            <span class="text-gray-300">Welcome, <%= user.username %></span>
            <a
              href="/logout"
              class="btn-red-gradient text-white px-4 py-2 rounded-lg font-semibold"
            >
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Left Sidebar - Profile Info -->
        <div class="md:col-span-1">
          <div class="blurred-card rounded-lg shadow-lg p-6">
            <div class="text-center mb-6">
              <div
                class="w-32 h-32 bg-gray-700/50 border border-gray-600 rounded-full mx-auto mb-4 flex items-center justify-center shadow-inner"
              >
                <span class="text-5xl text-gray-300"
                  ><%= user.username.charAt(0).toUpperCase() %></span
                >
              </div>
              <h2 class="text-2xl font-bold text-white mb-1"><%= user.username %></h2>
              <p class="text-gray-400"><%= user.email %></p>
            </div>
            <div class="border-t border-gray-600 pt-4">
              <div class="flex justify-between text-gray-300 mb-2">
                <span class="font-semibold">Posts</span>
                <span class="font-semibold"><%= posts.length %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content Area - Post Creation and Feed -->
        <div class="md:col-span-2">
          <!-- Create Post -->
          <div class="blurred-card rounded-lg shadow-lg p-6 mb-6">
            <h3 class="text-xl font-bold text-white mb-4">Create New Post</h3>
            <form action="/create-post" method="POST">
              <div class="mb-4">
                <textarea
                  name="content"
                  rows="4"
                  class="w-full px-3 py-2 rounded-lg focus:outline-none"
                  placeholder="Share your thoughts..."
                  required
                ></textarea>
              </div>
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="btn-gradient text-white px-6 py-2 rounded-lg font-semibold"
                >
                  Post
                </button>
              </div>
            </form>
          </div>

          <!-- Posts Feed -->
          <h3 class="text-2xl font-bold text-white mb-4 px-1">Your Posts</h3>
          <% if (posts.length === 0) { %>
             <div class="blurred-card rounded-lg shadow-lg p-6 mb-6">
                 <p class="text-center text-gray-400">You haven't created any posts yet.</p>
            </div>
          <% } else { %>
              <% for (let post of posts.slice().reverse()) { %>
              <div class="blurred-card rounded-lg shadow-lg p-6 mb-6">
                <div class="flex items-center mb-3">
                   <div class="w-10 h-10 bg-gray-700/50 border border-gray-600 rounded-full mr-3 flex items-center justify-center">
                        <span class="text-xl text-gray-300"><%= user.username.charAt(0).toUpperCase() %></span>
                   </div>
                   <div>
                      <h4 class="text-lg font-semibold text-white">
                        <%= user.username %>
                      </h4>
                       <span class="text-xs text-gray-400"><%= new Date(post.createdAt).toLocaleString() %></span>
                   </div>
                </div>

                <p class="text-gray-300 mb-4 ml-13"><%= post.content %></p>

                <div class="flex justify-end items-center space-x-4 border-t border-gray-600 pt-3 mt-3 text-sm">
                 
                  <div class="flex items-center space-x-1">
                    <a href="/like/<%=post._id%>" class="link-like">
                      <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                    </a>
                    <span class="text-gray-400">(<%= post.likes.length %>)</span>
                  </div>

                  <a
                    href="/delete-post/<%= post._id %>"
                    class="link-delete"
                    onclick="return confirm('Are you sure you want to delete this post?')"
                    >Delete</a
                  >
                </div>
              </div>
              <% } %>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
