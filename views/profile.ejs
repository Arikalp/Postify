<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Page</title>
    <link href="/css/style.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-gray-900 min-h-screen">
    <!-- Navigation Bar -->
    <nav class="bg-gray-800 shadow-lg">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <a href="/profile" class="text-white text-xl font-bold">Postify</a>
          </div>
          <div class="flex items-center space-x-4">
            <span class="text-gray-300">Welcome, <%= user.username %></span>
            <a
              href="/logout"
              class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition duration-200"
            >
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Left Sidebar - Profile Info -->
        <div class="md:col-span-1">
          <div class="bg-gray-800 rounded-lg shadow-lg p-6">
            <div class="text-center mb-6">
              <div
                class="w-32 h-32 bg-gray-700 rounded-full mx-auto mb-4 flex items-center justify-center"
              >
                <span class="text-4xl text-gray-400"
                  ><%= user.username.charAt(0).toUpperCase() %></span
                >
              </div>
              <h2 class="text-xl font-bold text-white"><%= user.username %></h2>
              <p class="text-gray-400"><%= user.email %></p>
            </div>
            <div class="border-t border-gray-700 pt-4">
              <div class="flex justify-between text-gray-400 mb-2">
                <span>Posts</span>
                <span><%=user.length%></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content Area - Post Creation and Feed -->
        <div class="md:col-span-2">
          <!-- Create Post -->
          <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
            <h3 class="text-xl font-bold text-white mb-4">Create Post</h3>
            <form action="/create-post" method="POST">
              <div class="mb-4">
                <textarea
                  name="content"
                  rows="4"
                  class="w-full px-3 py-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                  placeholder="What's on your mind?"
                ></textarea>
              </div>
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition duration-200"
                >
                  Post
                </button>
              </div>
            </form>
          </div>

          <!-- Posts Feed -->
          <% for (let post of posts) { %>
          <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
            <div class="mb-4">
              <h4 class="text-lg font-bold text-white">
                <%=user.username %>
              </h4>
              <p class="text-gray-400"><%= post.content %></p>
            </div>
            <div class="flex justify-between text-gray-400">
              <span><%= new Date(post.createdAt).toLocaleString() %></span>
              <a
                href="/delete-post/<%= post._id %>"
                class="text-red-600 hover:text-red-700"
                >Delete</a
              >
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
